<section class="users-index">
    <h1> Welcome to my blog app!</h1>
    <div class="users-container">
        <% @users.each do |user| %>
            <%= link_to "/users/#{user.id}", remote: false do %>
            <card class="each-user">
                <img src='<%= user.photo %>'>
                <div class="user-info">
                     <h2><%= user.name %></h2><br>
                     <h4 class="post-num">Number of posts: <%= user.posts_counter %> </h4>
                </div>
            </card>
            <% end %>
        <% end %>
      <div class="main-btn">
      <%= link_to "/posts/new", remote: false do %>
        <p>Create a post</p>
      <% end %>
    </div>
    </div>
</section>