<section class="user">
  <div class="posts-container">
    <div class="comment-box">
      <card class="post-data">
        <div class="post">
          <div class="main">
             <h4><%= @post.title %> by <%= @author.name %> </h4>
            <div class="counters">
              <h5 class="comment-num">Comments: <%= @post.comments_counter %> </h5>
              <h5 class="like-num">Likes: <%= @post.likes_counter %> </h5>
            </div>
          </div>
          <p> <%= @post.text %> </p>
        </div>
      </card>
      <% unless @like_state %>
        <%= form_with(url: "/users/#{@post.author_id}/posts/#{@post.id}/add_like", method: :post) do |form| %>
          <div >
            <%= form.submit 'Like', :class => "main-btn" %>
          </div>
        <% end %>
      <% end %>
      <div class="comments-box">
        <% if @post.comments.empty? %>
          <p> There are no comments on this post </p>
        <% end %>
        <% @post.comments.each do |comment| %>
          <p> <%= comment.author.name %>: <%= comment.text %> </p>
        <% end %>
      </div>
       <%= form_with url: "/users/#{@post.author_id}/posts/#{@post.id}/add_comment", method: :post, :class => 'main-form', local: true, scope: :comment do |f| %>
        <div class="input-container">
          <p>Add a comment:</p>
          <%= f.text_area :text,  :maxlength => 250 %>
        </div>
        <%= f.submit "Send", :class => 'main-btn'%>
      <% end %>
    </div>
  </div>
</section>